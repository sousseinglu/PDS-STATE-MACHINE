<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>State Machine Web Application</display-name>
  <servlet>
    <servlet-name>MessageSubscriber</servlet-name>
    <servlet-class>view.MessageSubscriber</servlet-class>
    <load-on-startup>1</load-on-startup>
</servlet>
  <servlet>
  	<servlet-name>EntryServlet</servlet-name>
  	<servlet-class>EntryServlet</servlet-class>
  </servlet>
 
  <servlet>
  	<servlet-name>Publisher</servlet-name>
  	<display-name>Publisher</display-name>
  	<description></description>
  	<servlet-class>controller.Publisher</servlet-class>
  </servlet>

  
  	<servlet-mapping>
  		<servlet-name>EntryServlet</servlet-name>
  		<url-pattern>/EntryServlet</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>Publisher</servlet-name>
  		<url-pattern>/Publisher</url-pattern>
  	</servlet-mapping>
  	
</web-app>
